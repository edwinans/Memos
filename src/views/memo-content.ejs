<%- include ('partial/header.ejs', {title: memo.title }) %>


    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-9">

                <h1>
                    <%= memo.title %>
                </h1>
                <div class="form-group">

                    <textarea class="form-control" rows="25" cols="40" readonly><%= memo.content %></textarea>
                </div>

            </div>

            <div class="col-3">
                <ul class="list-group">

                    <li class="list-group-item d-flex list-group-item-action justify-content-between align-items-center list-group-item-dark" id="first-row-list">
                        username
                        <span class="badge badge-primary badge-pill ">
                                access
                            </span>
                    </li>
                    <% for(user of users){ %>
                        <li class="list-group-item d-flex list-group-item-action justify-content-between align-items-center ">
                            <%= user.username %>
                                <span class="badge badge-primary badge-pill ">
                                    <% if(user.access ==1){  %>
                                        r
                                    <% } else {%>
                                        rw
                                </span>
                        </li>
                        <% }}%>
                </ul>
            </div>

        </div>
    </div>

    <%- include ('partial/footer.ejs') %>